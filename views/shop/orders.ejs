<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/order.css">

</head>

<body>
   <%- include('../includes/navigation.ejs') %>

   <main>
        <h1 class="page-title">üõçÔ∏è Your Orders</h1>

        <% if (orders && orders.length > 0) { %>
            <div class="orders-container">
                <% orders.forEach(order => { %>
                    <div class="order-card">
                        <div class="order-header">
                            <h2>Order ID: <span><%= order._id %></span></h2>
                        </div>

                        <h3>üì¶ Products:</h3>
                        <table class="order-table">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (order.products && order.products.length > 0) { %>
                                    <% order.products.forEach(item => { %>
                                        <tr>
                                            <td><%= item.product.title %></td>
                                            <td><%= item.quantity %>x</td>
                                            <td>$<%= (item.product.price || 0).toFixed(2) %></td>
                                            <td>$<%= (item.quantity * (item.product.price || 0)).toFixed(2) %></td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="no-products">No products found.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>

                        <p class="total-price">
                            <strong>üí∞ Total Price:</strong> 
                            <% 
                                let totalPrice = order.products 
                                    ? order.products.reduce((sum, item) => sum + (item.quantity * (item.product.price || 0)), 0) 
                                    : 0;
                            %>
                            <span>$<%= totalPrice.toFixed(2) %></span>
                        </p>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="no-orders">üö´ You don't have any orders yet.</p>
        <% } %>
   </main>

   <%- include('../includes/end.ejs') %>
</body>
</html>
