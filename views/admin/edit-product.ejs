   <%- include('../includes/navigation.ejs') %>
    <h1>Edit Product</h1>
    <form action="/admin/edit-product/<%= product._id %>" method="POST">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= product.title %>">
        <label for="price">Price</label>
